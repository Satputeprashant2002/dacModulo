#!/bin/bash

echo "Enter number of rows:"
read n

for ((i=1; i<=n; i++))
do
  for ((j=1; j<=i; j++))
  do
    echo -n "*"
  done
  echo
done
#!/bin/bash

echo "Enter number of rows:"
read n

for ((i=1; i<=n; i++))
do
  for ((s=i; s<n; s++))
  do
    echo -n " "
  done

  for ((j=1; j<=2*i-1; j++))
  do
    echo -n "*"
  done

  echo
done
